{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ]
    },
    "custom": {
      "command": "uv",
      "args": [
        "run",
        "--active",
        "custom_server.py"
      ]
    },
    "kubernetes": {
      "command": "python",
      "args": [
        "-m",
        "kubectl_mcp_tool.mcp_server"
      ],
      "env": {
        "KUBECONFIG": "$HOME/.kube/config"
      }
    }
  }
}
